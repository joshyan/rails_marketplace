<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Admin Settings</h3>
      </div>

    </div>
    <div class="clearfix"></div>

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:600px;">
          <div class="x_title">

          <%= form_for(:admin, url: admin_settings_path) do |f| %>
            <p id="notice"><%= flash[:error] %></p>

            <%= f.label :stripe_publishable_key %>
            <%= f.text_field :stripe_publishable_key, class: 'form-control', value: @current_admin.stripe_publishable_key  %>

            <%= f.label :stripe_secret_key %>
            <%= f.text_field :stripe_secret_key, class: 'form-control', value: @current_admin.stripe_secret_key %>

            <%= f.submit "Submit", class: "btn btn-primary" %>
          <% end %>

            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

