<div class="container-fluid">
    <div class="content-wrapper">	
		<div class="item-container">	
			<div class="container">
				<ol class="breadcrumb">
				  <li class="breadcrumb-item"><a href="/">Home</a></li>
				  <li class="breadcrumb-item"><%= link_to @category.name, category_products_path(@category) %></li>
				  <li class="breadcrumb-item active"><%= @product.title %></li>
				</ol>
				<div class="col-md-5">
					<div class="product product-image-left">
                    
						<center>
							<%= image_tag(@product.images[0].large.url) %>
						</center>
					</div>
					
					<% if @product.images.count > 1 %>
					<div class="container product-images-bottom pull-left">
						<center>
							<% @product.images.each do |image| %>
							<a class="thumb-item col-sm-4">
								<img src="<%=image.thumb.url%>" alt=""></img>
							</a>
							<% end %>
						</center>
					</div>
					<% end %>
				</div>
					
				<div class="col-md-7">
				<form action="<%= add_to_cart_url %>" method="post">
					<%= hidden_field_tag :product_id, @product.id %>
					<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
					<div class="product-title"><%= @product.title %></div>
					<div class="product-desc"></div>
					<div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
					<hr>
					<div class="product-price">$<%= @product.price %></div>
					<div class="product-stock">In Stock</div>
					
			        <div class="quantity">
						<label for="quantity">Quantity</label>
						<input id="quantity" type="number" name="quantity" value="1">
					</div>
        			<hr>
					<div class="btn-group cart">
						<button type="submit" class="btn btn-success">
							Add to cart 
						</button>
					</div>
					<div class="btn-group wishlist">
						<button type="button" class="btn btn-danger">
							Add to wishlist 
						</button>
					</div>
				</form>
				</div>
			</div> 
		</div>
		<div class="container-fluid">		
			<div class="col-md-12 product-info">
					<ul id="myTab" class="nav nav-tabs nav_tabs">
						
						<li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
						<li><a href="#service-two" data-toggle="tab">PRODUCT INFO</a></li>
						<li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>
						
					</ul>
				<div id="myTabContent" class="tab-content">
						<div class="tab-pane fade in active" id="service-one">
						 
							<section class="container product-info">
								<%= @product.description.html_safe %>
							</section>
										  
						</div>
					<div class="tab-pane fade" id="service-two">
						
						<section class="container">
								
						</section>
						
					</div>
					<div class="tab-pane fade" id="service-three">
												
					</div>
				</div>
				<hr>
			</div>
		</div>
	</div>
</div>